<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewMenu"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:src="@drawable/more"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>


   <ImageView
       android:id="@+id/imageViewBuildings"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/buildings"
       android:layout_marginTop="220dp"
       android:layout_marginLeft="80dp"/>


    <ImageView
        android:id="@+id/imageViewTimesheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/timesheet"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="220dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buildings"
        android:textSize="18dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Timesheet"
       android:textSize="18dp"
       android:textColor="@color/white"
       android:layout_marginTop="290dp"
       android:layout_marginLeft="220dp"
       android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageViewTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tickets"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:id="@+id/textViewMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/badge"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/white"
        android:text="5"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <ImageView
        android:id="@+id/imageViewChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="220dp"/>

    <TextView
        android:id="@+id/textViewMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/badge"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="260dp"
        android:textColor="@color/white"
        android:text="5"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tickets"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:textSize="18dp"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="220dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version: 1.0.0"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="130dp"/>


    </FrameLayout>

