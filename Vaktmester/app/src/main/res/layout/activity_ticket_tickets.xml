<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:id="@+id/imageViewBuildings"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:src="@drawable/buildings_real"
        android:layout_toRightOf="@id/imageViewBack"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Building name"
        android:textSize="18dp"
        android:layout_toRightOf="@id/imageViewBuildings"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Igor Nikolov, 00381-66-820-6526"
        android:textSize="13dp"
        android:layout_toRightOf="@id/imageViewBuildings"
        android:layout_below="@id/textViewName"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone"
        android:layout_toRightOf="@id/textViewPerson"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Active filters:"
       android:textAllCaps="false"
       android:textColor="#FF406880"
       android:layout_marginLeft="20dp"
       android:layout_below="@id/imageViewBuildings"
       android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textViewJanitors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ticket_filter_full"
        android:text="Janitors"
        android:layout_marginTop="110dp"
        android:textSize="13dp"
        android:layout_marginLeft="20dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ticket_filter"
        android:text="Status"
        android:layout_marginTop="110dp"
        android:textSize="13dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/textViewJanitors"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ticket_filter"
        android:text="Category"
        android:layout_marginTop="110dp"
        android:textSize="13dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/textViewStatus"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/textViewPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ticket_filter"
        android:text="Priority"
        android:layout_marginTop="110dp"
        android:textSize="13dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/textViewCategory"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/textViewTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1 - Ticket name"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_below="@id/textViewJanitors"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textViewCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created: 11.07.2018"
        android:textSize="14dp"
        android:textColor="#FF406880"
        android:layout_below="@id/textViewTicket"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textViewStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Started: 11.07.2018"
        android:textSize="14dp"
        android:textColor="#FF406880"
        android:layout_below="@id/textViewTicket"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textViewCreated"/>

    <TextView
        android:id="@+id/textViewStatuss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: In progress"
        android:textSize="14dp"
        android:textColor="#FF406880"
        android:layout_below="@id/textViewCreated"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textViewPriorityy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority: Low"
        android:textSize="14dp"
        android:textColor="#FF406880"
        android:layout_below="@id/textViewStarted"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setings"
        android:layout_below="@id/textViewStatuss"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>



</RelativeLayout>

