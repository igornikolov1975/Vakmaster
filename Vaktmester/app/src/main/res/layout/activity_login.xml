<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewOval1"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:src="@drawable/oval1_full"
        android:layout_weight="1"
        android:layout_marginLeft="150dp"/>
    <ImageView
        android:id="@+id/imageViewOval2"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:src="@drawable/oval2"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/imageViewOval3"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:src="@drawable/oval3"
        android:layout_weight="1"
        android:layout_marginRight="150dp"/>
    </LinearLayout>


    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Username"
        android:textSize="16dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:background="@drawable/drawable_username"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Password"
        android:textSize="16dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textAllCaps="false"
        android:layout_marginTop="25dp"
        android:background="@drawable/drawable_username"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:textAllCaps="true"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>



</LinearLayout>