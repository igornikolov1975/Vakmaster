<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:id="@+id/imageViewBuildings"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:src="@drawable/buildings_real"
        android:layout_toRightOf="@id/imageViewBack"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Building name"
        android:textSize="18dp"
        android:layout_toRightOf="@id/imageViewBuildings"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Igor Nikolov, 00381-66-820-6526"
        android:textSize="13dp"
        android:layout_toRightOf="@id/imageViewBuildings"
        android:layout_below="@id/textViewName"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone"
        android:layout_toRightOf="@id/textViewPerson"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:id="@+id/textViewLogTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log time"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_below="@id/imageViewBack"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewTickets"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Ticket name"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:background="@drawable/drawable_username"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="20dp"
        android:gravity="left|center"/>

    <ImageView
        android:id="@+id/imageViewArrow1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/arrow"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="330dp" />

        <TextView
            android:id="@+id/textViewBorretslag"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Borretslag name"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:background="@drawable/drawable_username"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="20dp"
            android:gravity="left|center"/>

        <ImageView
            android:id="@+id/imageViewArrow2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/arrow"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="330dp" />

        <TextView
            android:id="@+id/textViewBuildingName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Building name"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:background="@drawable/drawable_username"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="190dp"
            android:layout_marginRight="20dp"
            android:gravity="left|center"/>

        <ImageView
            android:id="@+id/imageViewArrow3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/arrow"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="330dp" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Date added: 11.07.2018"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:background="@drawable/drawable_username"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="20dp"
            android:gravity="left|center"/>

        <ImageView
            android:id="@+id/imageViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/date"
            android:layout_marginTop="235dp"
            android:layout_marginLeft="330dp"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:hint="*Log time:"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:background="@drawable/drawable_username"
        android:hint="00"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="310dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/buttonLogTime"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Log time"
        android:background="@color/orange"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="310dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Write comment"
        android:textAllCaps="false"
        android:textColor="#FF406880"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="355dp"
        android:background="@drawable/drawable_username"/>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="420dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="220dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@color/blue"/>

    <TextView
        android:id="@+id/textViewSpentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Total spent time:"
        android:textColor="#FF406880"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="465dp"/>

    <TextView
        android:id="@+id/textViewHours"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:text="14 hours"
        android:textAllCaps="false"
        android:background="@drawable/drawable_username"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/buttonReport"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:textAllCaps="false"
        android:text="Report"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="240dp" />





</RelativeLayout>